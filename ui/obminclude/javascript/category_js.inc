///////////////////////////////////////////////////////////////////////////////
function check_category_checkdel(sel) {
   if (sel.selectedIndex >= 0) {
      return true;
   } else {
      alert(\"$l_j_cat1_delete\");
      return false;
   }
}

///////////////////////////////////////////////////////////////////////////////
// Check if the Category update is possible
///////////////////////////////////////////////////////////////////////////////
function check_category_upd(label,sel,sel_d) {
  cat1_pos = sel_d.selectedIndex;
  if ((cat1_pos >= 0) && (label.value != \"\")) {
    sel.value=sel_d.options[cat1_pos].value;
    return true;
  } else {
     alert(\"$l_j_cat1_update\");
     return false;
  }
