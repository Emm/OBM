#!/usr/bin/make -f
# debian/rules for obm-core package, by
# sylvain garcia <sylvain.garcia@aliasource.fr>
#

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
export DH_COMPAT=5

#PERL
# If set to a true value then MakeMaker's prompt function will
# # always return the default without waiting for user input.
export PERL_MM_USE_DEFAULT=1

PACKAGE=$(shell dh_listpackages)

TMPLIBPERL     =$(CURDIR)/debian/libobm-perl
DIRPM   =$(CURDIR)/auto
#/PERL


configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp


build: build-indep build-stamp
build-stamp: configure-stamp 
	dh_testdir
	touch build-stamp
#PERL
	# As this is a architecture independent package, we are not
	# supposed to install stuff to /usr/lib. MakeMaker creates
	# the dirs, we prevent this by setting the INSTALLVENDORARCH
	# and VENDORARCHEXP environment variables.

	(cd $(CURDIR)/debian; \
	./buildperl.sh $(TMPLIBPERL) $(DIRPM) makefile-pl)
	
	(cd $(CURDIR)/debian; \
	./buildperl.sh $(TMPLIBPERL) $(DIRPM) make)

	touch $@
#/PERL



build-indep:
	dh_testdir

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	#RM Build perlModule
	(cd $(CURDIR)/debian; \
	./buildperl.sh $(TMPLIBPERL) $(DIRPM) make-clean)
	rm -f MANIFEST Makefile.old
	#
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
	##############
	#RULES OBM-CORE
	# obm-core needs the sql skeleton here in order to create db:
	cp debian/misc/mysql.sql debian/obm-core/usr/share/dbconfig-common/data/obm-core/install/mysql
<<<<<<< .mine
	#cp debian/misc/upgrade2.0-2.1.sh debian/obm-core/usr/share/dbconfig-common/scripts/obm-core/upgrade/mysql/1.0-2
=======
#	cp debian/misc/upgrade2.0-2.1.sh debian/obm-core/usr/share/dbconfig-common/scripts/obm-core/upgrade/mysql/1.0-2
>>>>>>> .r2147
	#
	################
	#RULES OBM-UI
	################


	#PERL

	# Add commands to install the package into debian/$PACKAGE_NAME here
#	$(MAKE) install DESTDIR=$(TMP) PREFIX=/usr
	(cd $(CURDIR)/debian; \
	./buildperl.sh $(TMPLIBPERL) $(DIRPM) make-install)
  
 
	touch $@
 
	#/PERL

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_install
	dh_installdebconf	
	dh_installdocs
	dh_installexamples
	dh_installlogrotate
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_perl
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep
.PHONY: build clean binary-indep binary install configure
