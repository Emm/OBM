#!/bin/sh

set -e
set -x

case "$1" in
	remove|failed-upgrade|abort-install|abort-upgrade|disappear)
		rm -f /etc/obm-satellite/obmSatellite.cf
		rm -f /usr/share/obm-satellite/obmSatellite.cf
	;;
	upgrade)
	;;
	purge)
		rm -f /etc/postfix/virtual_mailbox
		rm -f /etc/postfix/virtual_alias
		rm -f /etc/postfix/transport
		rm -f /etc/postfix/virtual_domains
	;;	
esac

